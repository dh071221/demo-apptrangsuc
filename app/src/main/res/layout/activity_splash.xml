<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SplashActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#ff4b3a"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/ic_ellipse"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_25sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginStart="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="@id/img1"
            app:layout_constraintStart_toStartOf="@id/img1"
            android:src="@drawable/logojewelry"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>
        <TextView
            android:id="@+id/tv1"
            app:layout_constraintTop_toBottomOf="@id/img1"
            android:text="Jewelry for"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_30ssp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv2"
            app:layout_constraintTop_toBottomOf="@id/tv1"
            android:text="Everyone"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/_30ssp"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/female"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            android:src="@drawable/female"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_290sdp"/>
        <ImageView
            android:id="@+id/male"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_60sdp"
            app:layout_constraintTop_toBottomOf="@id/tv2"
            android:src="@drawable/male"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_250sdp"/>
        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/female"
            android:layout_marginBottom="-15dp"
            android:src="@drawable/ic_rectangle_3"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_140sdp"/>
        <ImageView
            app:layout_constraintBottom_toBottomOf="@id/male"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_rectangle_5"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_190sdp"
            android:layout_height="@dimen/_80sdp"/>
        <TextView
            android:id="@+id/tvshoppingnow"
            android:text="Shopping now"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_50sdp"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_10sdp"
            android:textColor="#ff4a4b"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25ssp"
            android:background="@drawable/back_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>