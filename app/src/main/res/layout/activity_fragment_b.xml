<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#FEC868"
    android:padding="20dp"
    tools:context=".activity.FragmentB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Phu Nhuan Jewelry Joint Stock Company"
        android:textColor="#F55050"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColorHint="@color/black"
        android:textSize="20dp"
        android:hint="PNJ - VIETNAM's TOP JEWELRY AND DIAMOND BRAND"
        android:minHeight="48dp" />


    <EditText
        android:id="@+id/edtS_Email"
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/diachi"
        android:hint="Address: 170E Phan Dang Luu, Ward 3, Phu Nhuan District, Ho Chi Minh City"
        android:minHeight="48dp"
        />

    <EditText

        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:textColorHint="@color/black"
        android:drawableLeft="@drawable/lienhe"
        android:hint="Telephone: 028 39951703 - Fax: 028 3995 1702"
        android:minHeight="48dp" />

    <EditText
        android:drawablePadding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:hint="Support call center (08:00-21:00, free call)"
        android:minHeight="48dp" />


    <EditText
        android:drawablePadding="20dp"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/goimua"
        android:hint="Call to buy: 1800545457 (key 1)"
        android:minHeight="48dp" />

    <EditText
        android:drawablePadding="20dp"
        android:textColorHint="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:drawableLeft="@drawable/khieunai"
        android:hint="Complain: 1800545457 (key 2)"
        android:minHeight="48dp" />




</LinearLayout>